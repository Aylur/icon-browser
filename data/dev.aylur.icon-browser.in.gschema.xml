<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <enum id="@APP_ID@.symbolic">
    <value nick="both" value="0"/>
    <value nick="symbolic only" value="1"/>
    <value nick="colored only" value="2"/>
  </enum>

  <schema path="@RESOURCE@/" id="@APP_ID@">
    <key name="show-all" type="b">
      <default>false</default>
      <summary>Show all available icons</summary>
    </key>
    <key name="icon-size" type="i">
      <default>52</default>
      <summary>Size of icons in the list view.</summary>
    </key>
    <key name="theme-name" type="s">
      <default>"Adwaita"</default>
      <summary>Theme of the icons</summary>
    </key>
    <key name="colored" enum="@APP_ID@.symbolic">
      <default>'both'</default>
    </key>
  </schema>
</schemalist>
