using Gtk 4.0;
using Adw 1;

template $IconItem: Gtk.FlowBoxChild {
    tooltip-text: bind template.icon-name;
    hexpand: false;

    Image {
        icon-name: bind template.icon-name;
        pixel-size: bind template.icon-size;
        margin-bottom: 8;
        margin-top: 8;
        margin-end: 8;
        margin-start: 8;
    }
}
