{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2022",
        "module": "ES2022",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "./@girs",
        "./src",
    ],
}
